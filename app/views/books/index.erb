<div class="body">
  <div class=container>
    <div class="row">
      <%= render 'layouts/user_info', book: @book%>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
                <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                      <%= attachment_image_tag book.user, :avatar,  fallback: "no_image.jpg" ,size:'60x60' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book) do %>
                      <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
