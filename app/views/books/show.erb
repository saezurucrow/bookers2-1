<div class="body">
  <div class=container>
    <div class="row">
      <%= render 'layouts/user_info', book: @new_book %>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td></td>
                <td>
                  <%= link_to user_path(@book.user) do %>
                      <%= attachment_image_tag @book.user, :avatar,  class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size:'60x60' %>
                    <%= @book.user.name %>
                  <% end %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
            　　 <% if @book.user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-primary"%></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete , class: "btn btn-danger"%></td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
