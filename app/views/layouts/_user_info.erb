<div class="col-xs-3">
  <h2>User info</h2>
  <div class="form-group has-icon">
    <div class="user-edit-image">
      <%= attachment_image_tag current_user, :avatar, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",  size:'60x60' %>
     </div>
      <label class="control-label sr-only" for="inputEmail">ProfileImage</label>

        </div>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>bio</th>
              <th><%= current_user.bio %></th>
            </tr>
          </tbody>
        </table>

          <div class="row">
            <%= link_to edit_user_path(current_user.id) do %>
                <p class= "col-xs-12 btn btn-default glyphicon glyphicon-wrench "></p>
            <% end %>
          </div>

            <h2>New book</h2>
            <% if book.errors.any? %>
                <ul>
                <% book.errors.full_messages.each do |msg| %>
                    <li>error</li>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>
            <%= form_for(book) do |f| %>
                <div class="field row">
                <h4>Title</h4>
                <div class="col-xs-12 book_title">
                  <%= f.text_field :title %>
                </div>
                </div>
                <div class="field row">
                 <h4>Body</h4>
                <div class="col-xs-12 book_body">
                  <%= f.text_area :body %>
                </div>
              </div>
              <div class="btn btn-primary col-xs-12">
                <%= f.submit 'Create Book' %>
              </div>
            <% end %>
</div>
