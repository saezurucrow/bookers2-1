<div class="body">
  <div class="container">
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li>error</li>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      <% f.email_field :email %>
      <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label for="user_image">Image</label>
        <%= f.attachment_field :avatar, placeholder: "ファイルを選択", class: "user-edit-form",  size:'60x60'  %>
      </div>
      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :bio %>
      </div>
      <div class="actions">
        <%= f.submit "Update User" %>
      </div>
    <% end %>
  </div>
</div>
